	<body>
	<center>


 <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>

			<div ng-app="MtaaS" data-ng-controller="MtaaS">
			<form name="myForm">
			<table  style="width:30%">
			
			<tr>
				<td> Firstname  </td>
				<td> <input type="text" name="fname" ng-model="fname"></td>
			</tr>
			
			<tr>
				<td> Lastname </td>
				<td> <input type="text" name="lname" ng-model="lname" ></td>
			</tr>
			<tr>
				<td>Email id  </td>
				<td> <input type="email" name="email" ng-model="email"></td>
				<span style="color:red" ng-show="myForm.email.$dirty && myForm.email.$invalid">
				<span ng-show="myForm.email.$error.email">Invalid email address.</span>
				</span>
			</tr>			
			<tr>	
				<td>Username </td>
				<td><input type="text" name="name" ng-model="name"></td>
				
			</tr>
			<tr>
				<td>Password </td>
				<td><input id ="upass" type="password" name="password" ng-model="password"></td>
			</tr>
			<tr>
				<td>Confirm Password </td>
				<td><input type ="password" name = "cpassword" ng-model="cpassword"></td>
			</tr>
			<tr>	
				
				<td><br>Company Name</br> </td>
				<td><br>
				<input type="text" name = "company" value="0" ng-model="company" >
					
				</br></td>
				  
			</tr>
			<tr>	
				<td><br>Supplier Type</br> </td>
				<td><br><input type="text" name = "supplier" value="0" ng-model="supplier" >
				</br></td>
			</tr>
			
			<tr>
				<td><center><input type="submit" ng-click="signup()"></center></td>
			</tr>
			
			</table>
			</form>
			</div>
			</center>
	
	</body>


		
<script type ='text/javascript'>	//javascript code
var app=angular.module('MtaaS', [])
 app.controller('MtaaS', ['$scope', '$http', '$window', function ( $scope,$http,$window)
 {

	//alert("nitesh");
	$scope.signup = function (){
				var in_fname = $scope.fname;
				var in_lname = $scope.lname;
				var in_email = $scope.email;
				var in_name = $scope.name;
				var in_password=$scope.password;
				var in_cpassword=$scope.cpassword;
				var in_company= $scope.company;
				var in_supplier = $scope.supplier;

	
	$http({
			  method: 'POST',
			  url: '/signup',
			  data: {"fname":in_fname,"lname":in_lname,"email": in_email,"name":in_name,"password":in_password, "cpassword":in_cpassword
		  , "company" : in_company, "supplier":in_supplier}
			}).
			  then(function(response) {

				  $window.location.href = '/login';
			  });
}
 
 
 }]);
	
</script>
	
	
